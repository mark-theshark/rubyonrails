<% content_for :content do %>

<div class="row"> 

<div class="col">

</div>

<div class="col-12 col-md-6">

<h1><%= link_to "<span class=\"oi oi-home\" aria-hidden=\"true\"></span>".html_safe, posts_path, :title=>"Show most voted posts"%> 	Edit User</h1>
<p><%= link_to 'All Users', admin_index_path %></p>

<%= form_for @user, url: admin_path(@user) do |form| %>

<div class="card">
<div class="card-body m-3">

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email, :placeholder => "User's Email Address", :class => "form-control", :autofocus => true, :autocomplete => 'off' %>
  </p>
 
  <p>
    <%= form.label :encrypted_password %><br>
    <%= form.text_field :encrypted_password, :placeholder => "User's Password", :class => "form-control"  %>
  </p>

 </div>

<div class="card-footer text-muted">
<%= form.submit "Save", :class=>"btn btn-outline-secondary float-right" %>
</div>

</div>  

<% end %>


</div>

<div class="col">

</div>

</div>

<% end %>